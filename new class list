  class Program
    {

        class Person
        {
            public string name { set; get;}
            public int age { set; get; }
            public Person next;
            public Person() { }
            public void NewPerson(string Name,int Age)
            {
                Person person = this;
                while(person.next!=null)
                {
                    person = person.next;
                }
                person.next = new Person();
                person.next.name = Name;
                person.next.age = Age;
            }
            public void print()
            {
                Console.WriteLine($"Hello, my name is {name}, and i'm  {age} years old");
                Console.WriteLine('\n');
            }
            public void sortprint() //замена значений в объектах класса в зависимости от возраста,не меняя порядка объектов в списке
            {
                int i ;
                string name;
                int age;
                bool flag = true;
                Person min =this;
                for(i=1;i>0;i--)
                {
                    min = this;
                    while (min.next != null)
                    {
                        if (min.age > min.next.age)
                        {
                            age = min.age;
                            name = min.name;
                            min.age = min.next.age;
                            min.name = min.next.name;
                            min.next.age = age;
                            min.next.name = name;
                        }
                        min = min.next;
                        if(flag==true)
                        { 
                           i++;
                        }
                    }
                    flag = false;
                }

               

            }
        }
       
        static void Main(string[] args)
        {
            Person Header = new Person();
            string[] names = new string[10] { "a", "b", "c", "d", "e", "f", "g", "h", "i", "k"};
            Random random = new Random();
            foreach(string s in names)
            {
                Header.NewPerson(s, random.Next(1,100)) ;
            }
            Person xz=Header.next;
            Person small=Header.next;
            int smallage=101,smallAge=0;
            Console.WriteLine("if you want see sorted list print yes");
            if(Console.ReadLine()=="yes")
            { 
            for(int i=0;i<10;i++)             //здесь не меняя сам список при выводе сортирую
            {
                xz = Header.next;
                smallage = xz.age;
                for(int j=0;j<10;j++)
                {
                    if((smallage!=smallAge)&&(smallage>smallAge ))
                    { 
                    if ((xz.age <= smallage)&&(xz.age>smallAge))
                    {
                        smallage = xz.age;
                        small = xz;
                    }
                        xz = xz.next;
                    }
                    else
                    {
                        if (xz.next != null)
                        {
                            xz = xz.next;
                        
                        if ((xz.age>smallage)&&(xz.age>smallAge ))
                        {
                            smallage = xz.age;
                        }
                        }
                    }
                }
                smallAge = smallage;
               
              xz = Header.next;
                    i--;
                    for (int j=0;j<10;j++)  //проверка на повторы значений и вывод в консоль
                    {
                        if(xz.age==smallage)
                        {
                            xz.print();
                            i++;
                        }
                        xz = xz.next;
                    }
               


            }
            }
            Console.WriteLine("\n\n\n");
            Header.sortprint();//здесь использую метод сортировки,не меняющий местами объекты в списке,лишь значения в них
            xz = Header.next;
            while(xz.next!=null)
            {
                xz.print();
                xz = xz.next;
            }
            xz.print();

        }

    }
