using static System.Console;

Write("Введите крайнее число последовательности: ");
int endNum = Int32.Parse(ReadLine());
WriteLine($"Сумма: {fibo(endNum)}");

static int fibo(int endNum, int prevVal = 0, int curVal = 1, int sum = 0)
{
    if (prevVal == 0) WriteLine($"{prevVal} ");
    WriteLine($"{curVal} ");

    var tempVal = curVal;
    curVal += prevVal;
    prevVal = tempVal;
    sum += prevVal;

    if (curVal >= endNum)
    {
        return sum;
    }
    else
    {
        return fibo(endNum, prevVal, curVal, sum);
    }
}
